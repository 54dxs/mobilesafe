<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <TextView
        android:id="@+id/tv_itemBlackNumber_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黑名单电话号码"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_itemBlackNumber_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_itemBlackNumber_number"
        android:text="拦截方式"
        android:textColor="#66000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_itemBlackNumber_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/selector_delete" />

</RelativeLayout>