<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="3dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="3dip" >

    <ImageView
        android:id="@+id/iv_appIcon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginRight="3dip"
        android:src="@drawable/safe" />

    <TextView
        android:id="@+id/tv_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_appIcon"
        android:text="这是应用程序名"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_inRom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_appName"
        android:layout_toRightOf="@id/iv_appIcon"
        android:text="手机内存"
        android:textColor="#66000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_appName"
        android:layout_below="@id/tv_appName"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/tv_inRom"
        android:ellipsize="end"
        android:maxWidth="20dip"
        android:singleLine="true"
        android:text="版本号"
        android:textColor="#99ff0000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/unlock" />

</RelativeLayout>